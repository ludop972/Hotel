{% extends 'base.html.twig' %}

{% block title %}{{ room.name }}{% endblock %}

{% block body %}
<div class="container">

    <div class="row mt-5">
        <h1 class="text-center">{{ room.name }}</h1>
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>
                <div class="carousel-inner">
                    {% for picture in room.pictures %}
                        {% if picture.intro == true %}
                            <div class="carousel-item active">
                                <img src="/uploads/{{ picture.url }}" class="card-img-top img-fluid" alt="...">
                            </div>
                        {% else %}
                            <div class="carousel-item">
                                <img src="/uploads/{{ picture.url }}" alt="{{ room.name }}" class="d-block w-100 h-100">
                            </div>
                        {% endif%}
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <a href="{{ path('app_rooms') }}">
                <button class="float-end btn btn-danger btn-sm">
                    <img src="{{ asset('assets/img/retour.png') }}">
                    Retour
                </button>
            </a>
            <br>
            <span class="product-page-price">{{ (room.price / 100) | number_format(2, ',')}} € / nuit</span>
            <hr>
            <p>
                {{ room.description }}
            </p>
            <hr>
            <div class="row">
                {% for info in room.infos %}
                <div class="col-md-6">
                    <ul class="listInfos">
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/measuring-tape.png') }}" width="30px" style="margin-right: 10px"> {{ info.size }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/bed.png') }}" width="30px" style="margin-right: 10px"> {{ info.bed }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/restaurant.png') }}" width="30px" style="margin-right: 10px"> {{ info.outside }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/hair-dryer.png') }}" width="30px" style="margin-right: 10px"> {{ info.tools }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/monitor.png') }}" width="30px" style="margin-right: 10px"> {{ info.tv }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/room-service-1.png') }}" width="30px" style="margin-right: 10px"> {{ info.foods }}
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="listInfos">
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/avatar.png') }}"  width="30px" style="margin-right: 10px"> {{ info.capacity }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/wifi.png') }}"  width="30px" style="margin-right: 10px"> {{ info.internet }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/bathtub.png') }}"  width="30px" style="margin-right: 10px"> {{ info.bathroom }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/air-conditioning.png') }}"  width="30px" style="margin-right: 10px"> {{ info.cooling }}
                        </li>
                        <li>
                            <img src="{{ asset('assets/img/informationsRoom/minibar.png') }}"  width="30px" style="margin-right: 10px"> {{ info.shortDrinks }}
                        </li>
                    </ul>
                </div>
                {% endfor %}
            </div>
            <hr>
            <a href="{{ path('app_booking_new') }}">
                <button class="float-end btn btn-success btn-sm">
                    Réserver <img src="{{ asset('assets/img/plus.png') }}">
                </button>
            </a>
        </div>
    </div>
</div>
{% endblock %}
