{% extends 'base.html.twig' %}

{% block title %}Nos chambres{% endblock %}

{% block body %}
    <!-- Icons Grid-->
    <div class="bg-light container mt-3">
        <h1 class="text-center">Nos chambres</h1>
        <hr>
    {% for room in rooms %}
        <div class="row mt-5">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">

                        {% for picture in room.pictures %}
                            {% if picture.intro == true %}
                        <div class="carousel-item active">
                        <img src="/uploads/{{ picture.url }}" class="card-img-top img-fluid" alt="...">
                        </div>
                            {% else %}
                            <div class="carousel-item">
                                <img src="/uploads/{{ picture.url }}" alt="{{ room.name }}" class="d-block w-100">
                            </div>
                               {% endif%}
                        {% endfor %}

                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <h5 class="text-center">{{ room.name }}</h5>
                <br><p>{{ room.description }}</p>
                <a href="{{ path('app_room', { 'slug' : room.slug }) }}">
                    <button class="btn btn-info btn-sm float-end">
                        En savoir plus
                    </button>
                </a>
            </div>
        </div>
        <hr>
        {% endfor %}
    </div>
{% endblock %}
