{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <!-- Masthead-->
    <header class="masthead m-0">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-xl-6">
                    <div class="text-center text-white">
                        <h1 class="mb-5">Trouvez la chambre de vos rêves !</h1>
                            <div class="row">
                                <div class="text-center">
                                    <a href="{{ path('app_rooms') }}">
                                        <button class="btn btn-success btn-sm">Chercher</button>
                                    </a>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Icons Grid-->
    <div class="container">
        <div class="row mt-5">
            {% for room in rooms %}
                <div class="col-md-4">
                    <div class="card" style="width: 20rem;">
                        {% for picture in room.pictures %}
                        {% if picture.intro == true %}
                        <img src="/uploads/{{ picture.url }}" class="card-img-top img-fluid" alt="...">
                        {% endif %}
                        {% endfor %}
                        <div class="card-body">
                            <h5 class="card-title text-center">{{ room.name }}</h5>
                            <p class="card-text">
                                {{ room.description[:88] }} ...
                            </p>
                            <a href="{{ path('app_room', { 'slug' : room.slug }) }}" class="btn btn-primary btn-sm float-end">En savoir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Testimonials-->
    <section class="testimonials text-center bg-light mt-5">
        <div class="container">
            <h2 class="mb-5">Ce que vous en pensez...</h2>
            <div class="row">
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="assets/img/testimonials-1.jpg" alt="..." />
                        <h5>Margaret E.</h5>
                        <p class="font-weight-light mb-0">"C'était fantastique, Merci beaucoup à vous !"</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="assets/img/testimonials-2.jpg" alt="..." />
                        <h5>Fred S.</h5>
                        <p class="font-weight-light mb-0">"J'y ai séjourné pour un weekend, je recommande !"</p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="testimonial-item mx-auto mb-5 mb-lg-0">
                        <img class="img-fluid rounded-circle mb-3" src="assets/img/testimonials-3.jpg" alt="..." />
                        <h5>Sarah W.</h5>
                        <p class="font-weight-light mb-0">"C'était le meilleur séjour à l'hotel de ma vie !"</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Call to Action-->
    <section class="call-to-action text-white text-center" id="signup">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-xl-6">
                    <h2 class="mb-4">Trouvez la chambre de vos rêves !</h2>
                        <div class="row">
                            <div class="text-center">
                                <a href="{{ path('app_rooms') }}">
                                    <button class="btn btn-success btn-sm">Chercher</button>
                                </a>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
