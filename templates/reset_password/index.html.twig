{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container">
        <div class="block-small">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-info"> {{ message }}</div>
            {% endfor %}
            <form method="post">
                <h1 class="h3 mt-3 font-weight-normal text-center">Réinitialiser mon mot de passe</h1>
                <label for="inputEmail">Votre Email</label>
                <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email"  placeholder="Merci de saisir votre Email" required autofocus>

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
                <button class="btn btn-lg btn-info btn-block mt-3" type="submit">
                    Valider
                </button>
                <hr>
                <p class="text-center"> Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter ?</a></p>
            </form>
        </div>
    </div>
{% endblock %}
